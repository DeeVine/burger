<img src="../../public/assets/img/burger.png" class="text-center" style="width:20%">
<h1 class="text-center">Eat-Da-Burger!</h1>
<div class="container ">
	<div class="row">
		<div class="left-side col-md-6">
		<!--All available burgers on  left side go here as a new row-->
			{{#each burgers}}
				<div class="row">
					<div class="col-md-8">
					  <p>{{id}}. {{burger_name}}</p>
					  <hr>
				  	</div>
					<div class="col-md-4">
					  <button>Devour It!</button>
					</div>
			  	</div> 
			{{/each}}
		</div>
		<div class="right-side col-md-6">
		<!-- All devoured burgers go on the right side here as a new row-->
		  <div class="row">
				<div class="col-md-12">
				  <p>Id: {{id}} burger name: {{burger_name}}</p>
				  <hr>
			  </div>
		  </div>
		</div>
	</div>

	<form>    
	  <div class="form-group">
	    <label for="exampleFormControlTextarea1">Example textarea</label>
	    <textarea class="form-control" id="text-area" rows="3"></textarea>
	  </div>
	  <button class="submit text-primary">Submit</button>
	</form>
</div>


